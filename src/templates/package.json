{
	"name": "howdy",
	"version": "0.0.5",
	"description": "WordPress plugin starter",
	"main": "index.js",
	"scripts": {
		"diploy-build": "npm run build && webpack --config dev.config.js",
		"build": "webpack --config production.config.js",
		"dev": "npm run tailwindcss:admin:build && npm run tailwindcss:public:build && webpack --config dev.config.js --watch",
		"tailwindcss:public:build": "tailwindcss -c tailwind.js -i ./assets/dev/public/scss/tailwind.source.css -o ./assets/dev/public/scss/tailwind.scss",
		"tailwindcss:admin:build": "tailwindcss -c tailwind.config.js -i ./assets/dev/admin/scss/tailwind.source.css -o ./assets/dev/admin/scss/tailwind.scss",
		"tailwindcss:public": "tailwindcss -c tailwind.js -i ./assets/dev/public/scss/tailwind.source.css -o ./assets/dev/public/scss/tailwind.scss --watch",
		"tailwindcss:admin": "tailwindcss -c tailwind.config.js -i ./assets/dev/admin/scss/tailwind.source.css -o ./assets/dev/admin/scss/tailwind.scss --watch"
	},
	"author": {
		"name": "CodesVault",
		"email": "keramotul.islam@gmail.com"
	},
	"license": "GPL-2.0",
	"devDependencies": {
		"autoprefixer": "^10.4.12",
		"css-loader": "^6.5.1",
		"css-minimizer-webpack-plugin": "^3.3.1",
		"mini-css-extract-plugin": "^2.4.5",
		"postcss": "^8.4.17",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-import": "^15.0.0",
		"postcss-loader": "^6.2.1",
		"postcss-nesting": "^10.2.0",
		"sass": "^1.45.2",
		"sass-loader": "^12.4.0",
		"tailwindcss": "^3.1.8",
		"webpack": "^5.65.0",
		"webpack-build-notifier": "^2.3.0",
		"webpack-cli": "^4.9.1"
	}
}
